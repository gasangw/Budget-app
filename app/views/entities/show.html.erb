<p style="color: green"><%= notice %></p>
<div class="container-flud d-flex mx-3 bg-white p-2">
  <div>
    <img src=<%= @entity.group.icon %> alt=<%= @entity.group.name %> class="img-fluid img-thumbnail border-0" width="80px" />
  </div>
  <div>
    <p class="mx-2"><%= @entity.name %></p>
  </div>
</div>
<%= render @entity %>

<div class="container-fluid d-flex mt-2">
  <%= link_to "Back to bills", group_path(@entity.group_id) %>
<% if can? :destroy, @entity %>
<div class="mx-2">|</div> <%= button_to "Delete this bill", group_entity_path(@entity.group_id, @entity), method: :delete, class: 'border-0 text-primary' %>
<% end %>
</div>
